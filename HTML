    <script>
        document.addEventListener('mousemove', function(e) {
            const bg = document.querySelector('.interactive-bg');
            const mouseX = (e.clientX / window.innerWidth) * 100;
            const mouseY = (e.clientY / window.innerHeight) * 100;
            bg.style.setProperty('--mouse-x', mouseX + '%');
            bg.style.setProperty('--mouse-y', mouseY + '%');
        });

        const statusIndicator = document.getElementById('statusIndicator');

        async function checkSiteStatus() {
            try {
                const response = await fetch('/', { method: 'GET', cache: 'no-store' });
                if (response.ok) {
                    statusIndicator.classList.remove('offline');
                    statusIndicator.classList.add('online');
                    statusIndicator.title = 'Site Online: Conectado com sucesso.';
                } else {
                    statusIndicator.classList.remove('online');
                    statusIndicator.classList.add('offline');
                    statusIndicator.title = `Site Offline: Resposta HTTP ${response.status}.`;
                }
            } catch (error) {
                console.error('Erro ao verificar status do site (frontend):', error);
                statusIndicator.classList.remove('online');
                statusIndicator.classList.add('offline');
                statusIndicator.title = 'Site Offline: Erro de conexão de rede.';
            }
        }

        checkSiteStatus();
        setInterval(checkSiteStatus, 5000);
    </script>
